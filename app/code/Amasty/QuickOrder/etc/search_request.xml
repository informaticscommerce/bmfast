<requests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:framework:Search/etc/search_request.xsd">
    <request query="quickorder_search_container" index="catalogsearch_fulltext">
        <dimensions>
            <dimension name="scope" value="default"/>
        </dimensions>
        <queries>
            <query xsi:type="boolQuery" name="quickorder_search_container" boost="1">
                <queryReference clause="should" ref="quickorder_search" />
                <queryReference clause="must" ref="visibility" />
                <queryReference clause="must" ref="quickorder_stock_status" />
            </query>
            <query xsi:type="matchQuery" value="$search_term$" name="quickorder_search">
                <match field="name" />
                <match field="sku" />
            </query>
            <query xsi:type="filteredQuery" name="quickorder_stock_status">
                <filterReference clause="must" ref="quickorder_stock_status_filter" />
            </query>
            <query xsi:type="filteredQuery" name="visibility">
                <filterReference clause="must" ref="visibility_filter" />
            </query>
        </queries>
        <filters>
            <filter xsi:type="termFilter" name="quickorder_stock_status_filter" field="quickorder_stock_status" value="$quickorder_stock_status$" />
            <filter xsi:type="termFilter" name="visibility_filter" field="visibility" value="$visibility$" />
        </filters>
        <from>0</from>
        <size>10000</size>
    </request>
</requests>
