<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Amasty\QuickOrder\Block\Search"
                   name="amquickorder.search"
                   template="Amasty_QuickOrder::components/search_wrapper.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="search" xsi:type="array">
                                <item name="component" xsi:type="string">Amasty_QuickOrder/js/components/search</item>
                                <item name="config" xsi:type="array">
                                    <item name="search_placeholder" xsi:type="string" translate="true">Search by SKU or Product Name</item>
                                    <item name="template" xsi:type="string">Amasty_QuickOrder/components/search</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
            <container htmlClass="amqorder-wrapper" htmlTag="section">
                <block class="Amasty\QuickOrder\Block\Grid"
                       name="amquickorder.grid"
                       template="Amasty_QuickOrder::components/grid_wrapper.phtml">
                    <arguments>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="grid_title" xsi:type="array">
                                    <item name="component"  xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/title</item>
                                    </item>
                                </item>
                                <item name="grid" xsi:type="array">
                                    <item name="component" xsi:type="string">Amasty_QuickOrder/js/components/grid/grid</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/pages/quick_order/grid</item>
                                        <item name="actionsEnabled" xsi:type="boolean">true</item>
                                    </item>
                                </item>
                                <item name="product_image" xsi:type="array">
                                    <item name="component" xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/product_image</item>
                                    </item>
                                </item>
                                <item name="product_title" xsi:type="array">
                                    <item name="component" xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/product_title</item>
                                    </item>
                                </item>
                                <item name="sku" xsi:type="array">
                                    <item name="component" xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/sku</item>
                                    </item>
                                </item>
                                <item name="qty" xsi:type="array">
                                    <item name="component" xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/qty</item>
                                    </item>
                                </item>
                                <item name="price" xsi:type="array">
                                    <item name="component" xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/price</item>
                                    </item>
                                </item>
                                <item name="remove_button" xsi:type="array">
                                    <item name="component"  xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/pages/quick_order/remove_button</item>
                                    </item>
                                </item>
                                <item name="options_button" xsi:type="array">
                                    <item name="component"  xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/options_button</item>
                                    </item>
                                </item>
                                <item name="options_block" xsi:type="array">
                                    <item name="component"  xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/options_block</item>
                                    </item>
                                </item>
                                <item name="item_errors" xsi:type="array">
                                    <item name="component"  xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/item_errors</item>
                                    </item>
                                </item>
                                <item name="move_buttons" xsi:type="array">
                                    <item name="component"  xsi:type="string">Amasty_QuickOrder/js/components/grid/move</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/move_buttons</item>
                                    </item>
                                </item>
                                <item name="multiple" xsi:type="array">
                                    <item name="component" xsi:type="string">Amasty_QuickOrder/js/components/multiple
                                    </item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/multiple
                                        </item>
                                        <item name="name" xsi:type="string">Test</item>
                                        <item name="fileUploadEnabled" xsi:type="boolean">false</item>
                                    </item>
                                </item>
                                <item name="pager" xsi:type="array">
                                    <item name="component"  xsi:type="string">Amasty_QuickOrder/js/components/grid/pager</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Amasty_QuickOrder/components/grid/pager</item>
                                    </item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
            </container>
            <block class="Amasty\QuickOrder\Block\Popup"
                   name="amquickorder.popup"
                   template="Amasty_QuickOrder::components/popup.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="popup" xsi:type="array">
                                <item name="component" xsi:type="string">Amasty_QuickOrder/js/components/popup</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Amasty_QuickOrder/components/popup</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
