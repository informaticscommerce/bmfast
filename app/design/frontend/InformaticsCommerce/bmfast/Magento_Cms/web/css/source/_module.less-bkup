//
//  Common
//  _____________________________________________

& when (@media-common = true) {
    .header-contact-block {
        display: inline-block;
        ul{
            margin-bottom: 0;
            padding: 0;
        }
        .col {
            display: inline-block;
            list-style: none;
            margin: 0;
            a {
                color: #fff;
                text-transform: capitalize;
                text-decoration: none;
                font-family: @font-family-name__roboto-Regular;
                &:before {
                    background-image: url('../images/icon_sprite.png');
                    content: "";
                    display: inline-block;
                    vertical-align: top;
                    width: 25px;
                    height: 20px;
                    background-position: -20px -6px;
                }
            }
        }
        .phone {
            margin-left: 15px;
            a {
                font-family: @font-family-name__roboto-Regular;
                &:before {
                    background-position: -65px -4px !important;
                } 
                span {
                    font-family: @font-family-name__roboto-Bold;
                }   
            }
        }
        .seprator {
            width: 1px;
            height: 22px !important;
            background-color: #497698;
            margin-left: 15px;
            vertical-align: bottom;
        }
    } 
    
    .get-quote {
        float: right;
        a {
            color: #2a2a2a;
            background-color: #ffd200;
            padding: 14px 16px;
            text-transform: uppercase;
            font-size: 14px;
            text-decoration: none;
            font-family: @font-family-name__roboto-Medium;
            &:after {
                content: '\f061';
                font-family: @font-family-name__FontAwesome;
                vertical-align: middle;
                display: inline-block;
                margin-left: 10px;
                vertical-align: top;
                line-height: 20px;
            }
        }
    }

    .btn-login {
        display: inline-block;
        margin-left: 13px;
        .header-login {
            display: inline-block;
            a {
                font-size: 16px;
                line-height: 28px;
                padding: 7px 20px;
                background: #44924f;
                color: #fff;
                text-decoration: none;
                font-family: @font-family-name__poppins-Regular;
            }
        }
    }

    .home-top-banner {
        .top-block {
            position: relative;
        }
        .top-banner {
            img {
                width: 100%;
            }
        }
        .heading {
            position: absolute;
            top: 29%;
            left: 10px;
            right: 10px;
            max-width: 700px;
            margin: 0 auto;
            h1 {
                font-size: 60px;
                text-transform: uppercase;
                color: #ffd200;
                margin-bottom: 20px;
                font-family: @font-family-name__roboto-Regular;
                span {
                    color: #fff;
                    font-family: @font-family-name__roboto-Bold;
                }
            }
            p{
                font-size: 30px;
                color: #fff;
                margin-bottom: 40px;
            }
            a {
                text-decoration: none;
                padding: 14px 27px;
                background-color: #e96626;
                font-size: 16px;
                font-family: @font-family-name__poppins-Regular;
                color: #fff;
                &:after {
                    content: '\f061';
                    font-family: FontAwesome;
                    margin-left: 10px;
                }
            }
        }
    }

    .bm-qualities {
        margin: -125px auto 0;
        position: relative;
        z-index: 1;
        .block-content {
            float: left;
            width: 33.3333%;
            .image {
                float: left;
                padding-left: 35px;
                padding-top: 18px;
                padding-bottom: 15px;
            }
            .desc {
                padding: 0 50px 0 95px;
            }
            &.shipping {
                background: #f6f9ff;
            }
            &.money-back {
                background: #ffd200;
            }
            &.support {
                background: #2d75ac;
                h3 {
                    color: #fff;
                }
                p {
                    color: #fff;
                }
            }
            h3 {
                font-size: 20px;
                font-weight: 400;
                margin-top: 15px;
                font-family: @font-family-name__roboto-Bold;
            }
            p {
                margin-bottom: 20px;
                font-family: @font-family-name__roboto-Regular;
            }
        }
        .content {
            padding-top: 15px;
            padding-bottom: 15px;
        }
    }

    .product-item-gallery {
        padding-top: 175px;
        .title {
            text-align: center;
            font-size: 30px;
            font-family: @font-family-name__poppins-Bold;
        }
        .block-content {
            .block-items {
                list-style: none;
                padding-left: 0;
                .item {
                    float: left;
                    max-width: 266px;
                    margin-right: 25px;
                    &:nth-child(4n+4) {
                        margin-right: 0;
                    }
                    &:nth-child(5) {
                        clear: left;
                    }
                }
                .item-image {
                    img{
                        border: 1px solid #b0b2b6;
                        &:hover {
                            border: 2px solid #6a95dc !important;
                            background: rgba(246, 249, 255, 0.5);
                            box-shadow: 0 25px 35px -5px rgba(0,0,0,.1);
                        }
                    }
                }
                .item-info {
                    h3 {
                        font-weight: 400;
                        font-family: @font-family-name__roboto-Medium;
                    }
                    p {
                        font-size: 13px;
                        font-family: @font-family-name__roboto-Regular;
                    }
                }
            }
        }
    }

    .cities { 
        margin-bottom: 0;
        padding-left: 0;
        li {
            list-style: none;
            display: inline-block;
            font-size: 14px;
            color: #4a4a4a;
        }
        .seprator {
            width: 1px;
            height: 13px;
            background-color: #d4d7dc;
            vertical-align: middle;
            margin: 0px 10px;
        }
    }
}

//
//  Mobile
//  _____________________________________________

.media-width(@extremum, @break) when (@extremum = 'max') and (@break = @screen__m) {

}

//
//  Desktop
//  _____________________________________________

.media-width(@extremum, @break) when (@extremum = 'min') and (@break = @screen__m) {


    .row {
        &:after {
            content: "";
            clear: both;
            display: block;
        }    
    }
  
}
