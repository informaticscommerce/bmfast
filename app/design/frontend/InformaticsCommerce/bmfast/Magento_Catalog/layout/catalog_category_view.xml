<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Catalog\Block\Category\View" name="category.subcat" template="Magento_Catalog::category/cat-thumbnail.phtml"/>
			
			<block class="Magento\Checkout\Block\Cart\Sidebar" name="footercart" as="footercart" template="Magento_Catalog::category/footer-cart.phtml" />
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Magento\Checkout\Block\Cart\Sidebar" name="minicart.footer" as="minicart.footer" template="Magento_Checkout::cart/minicart-footer.phtml" after="footercart">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="types" xsi:type="array"/>
                        <item name="components" xsi:type="array">
                            <item name="minicart_content_footer" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Checkout/js/view/minicart-footer</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Magento_Checkout/minicart/content-footer</item>
                                </item>
                                <item name="children" xsi:type="array">
                                    <item name="summary.container" xsi:type="array">
                                        <item name="component" xsi:type="string">uiComponent</item>
                                        <item name="config" xsi:type="array">
                                            <item name="displayArea" xsi:type="string">summaryContainer</item>
                                        </item>
                                        <item name="children" xsi:type="array">
                                            <item name="summary" xsi:type="array">
                                                <item name="component" xsi:type="string">uiComponent</item>
                                                <item name="config" xsi:type="array">
                                                    <item name="template" xsi:type="string">Magento_Checkout/minicart/summary-footer</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                    <item name="subtotal.container" xsi:type="array">
                                        <item name="component" xsi:type="string">uiComponent</item>
                                        <item name="config" xsi:type="array">
                                            <item name="displayArea" xsi:type="string">subtotalContainer</item>
                                        </item>
                                        <item name="children" xsi:type="array">
                                            <item name="subtotal" xsi:type="array">
                                                <item name="component" xsi:type="string">uiComponent</item>
                                                <item name="config" xsi:type="array">
                                                    <item name="template" xsi:type="string">Magento_Checkout/minicart/subtotal-footer</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

		<referenceContainer name="category.view.container">
            <block class="Magento\Catalog\Block\Category\View" name="category.title" template="Magento_Catalog::category/cat-banner-desc.phtml"/>
        </referenceContainer>        
        
        <referenceContainer name="page.top">
			<container name="category.view.top.container" htmlTag="div" htmlClass="category-top-view" after="-" />
		</referenceContainer>

        <referenceContainer name="page.wrapper">
            <block class="Magento\Cms\Block\Block" name="bm_product_test"  before="bm_blog_news">
				<arguments>
					<argument name="block_id" xsi:type="string">bm_product_test</argument>
				</arguments>
			</block>
            <block class="Magento\Cms\Block\Block" name="bm_blog_news"  before="pre_footer_logos">
				<arguments>
					<argument name="block_id" xsi:type="string">bm_blog_news</argument>
				</arguments>
			</block>
			<block class="Magento\Cms\Block\Block" name="pre_footer_logos"  before="footer">
				<arguments>
					<argument name="block_id" xsi:type="string">pre_footer_logos</argument>
				</arguments>
			</block>
        </referenceContainer>

        <move element="breadcrumbs" destination="page.wrapper" before="main.content" />
        <move element="category.view.container" destination="category.view.top.container" />

		<move element="category.image" destination="category.view.top.container" before="-" />
		<move element="category.description" destination="content" before="-"/>
		<move element="catalog.leftnav" destination="content" after="category.description"/>
        <referenceContainer name="page.main.title" remove="true"/>
    </body>
</page>
