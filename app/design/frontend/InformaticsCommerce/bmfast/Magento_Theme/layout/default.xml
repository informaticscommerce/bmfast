<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<css src="Magento_Theme::css/owl.carousel.css"/>
		<css src="Magento_Theme::css/owl.theme.min.css"/>
	</head>
    <body>

        <referenceBlock name="header.panel">
			<block class="Magento\Cms\Block\Block" name="header_contact_block" >
				<arguments>
					<argument name="block_id" xsi:type="string">header_contact_block</argument>
				</arguments>
			</block>

			<block class="Magento\Customer\Block\Form\Login" name="login.popup" after="-" template="Magento_Theme::html/loginpopup.phtml"/>


			<block class="Magento\Cms\Block\Block" name="header_quote" >
				<arguments>
					<argument name="block_id" xsi:type="string">header_quote</argument>
				</arguments>
			</block>
		</referenceBlock>


		<referenceContainer name="footer">
           <block class="Magento\Cms\Block\Block" name="footer_bottom_links" >
				<arguments>
					<argument name="block_id" xsi:type="string">footer_bottom_links</argument>
				</arguments>
			</block>
			<block class="Magento\Cms\Block\Block" name="footer_cities"  after="footer-content">
				<arguments>
					<argument name="block_id" xsi:type="string">footer_cities</argument>
				</arguments>
			</block>
        </referenceContainer>

        
        <!-- <move element="category.image" destination="page.wrapper" before="main.content" /> -->
		<move element="authorization-link-login" destination="header-wrapper" after="minicart"/>
        <move element="breadcrumbs" destination="page.wrapper" before="main.content"/>
        <move element="footer_cities" destination="before.body.end"/>
        <!-- <referenceBlock name="page.main.title" remove="true"/> -->
        <referenceBlock name="catalog.compare.sidebar" remove="true"/> 
        <referenceBlock name="copyright" remove="true"/>
        <referenceBlock name="header.links" remove="true"/>
		<referenceBlock name="footer_links" remove="true"/>
		<referenceBlock name="form.subscribe" remove="true"/>
		<referenceBlock name="currency" remove="true" /> 
		<referenceBlock name="store.links" remove="true" />
		<referenceBlock name="store.settings" remove="true" />
		<referenceBlock name="register-link" remove="true" />


		
		<!-- <move element="authorization-link" destination = "header-wrapper" after="minicart" /> -->
		
		<!-- <referenceContainer name="header-wrapper">
			<block class="Magento\Cms\Block\Block" name="header_login" after="block.search">
				<arguments>
					<argument name="block_id" xsi:type="string">header_login</argument>
				</arguments>
			</block>
		</referenceContainer> -->


    </body>
</page>
